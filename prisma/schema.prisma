model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     String @default("user") // <-- add this line

  reports Report[]
}

model Report {
  id      Int      @id @default(autoincrement())
  date    DateTime
  tasks   String
  timings String
  notes   String?
  userId  String
  user    User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}
